@import 'nib'

body, button
  font-family: Ubuntu
  font-size: 18px

h1,h2
  font-family: 'Rock Salt', cursive
  text-shadow: -2px 0px 2px #fff

h1
  margin-bottom: 0px
  font-size: 8em
  margin-top: 10px
  text-align: right
  a
    text-decoration: none
    color: #000
h2
  font-size: 1em
  margin-top: -100px
  margin-bottom: 30px
  text-align: right

h3
  text-shadow: 0 0 3px #fff


table
  table-layout: fixed
  // border-collapse: collapse
  th, td
    border: 1px dotted gray

input, textarea
  border-radius: 5px
  background-color: rgba(255,255,255,0.7)
  border: 2px solid #300

textarea
  width: 100%
  height: 150px

button
  cursor: pointer
  border-radius: 5px
  border: none
  background-color: rgb(25,25,25,0.9)
  background-color: rgba(25,25,25,0.9)
  background-image: linear-gradient(top, rgba(25,25,25,0.9), rgba(50,50,50,0.9))
  color: #fff
  box-shadow: 0 10px 10px -10px #000

.wrap
  position: relative
  width: 960px
  margin: 0 auto

.column
  vertical-align: top
  width: 48%
  display: inline-block

.converter
  padding: 20px
  border-radius: 15px
  background-color: rgb(100,200,200)
  background-color: rgba(100,200,200,0.9)
  background-image: linear-gradient(top, rgba(100,0,0,0.9), rgba(200,200,200,0.9))
  box-shadow: 0 0 10px 10px #200

.details
  margin-top: 20px
  padding: 10px
  background-color: rgb(255,255,255)
  background-color: rgba(255,255,255,0.9)
  box-shadow: 0 10px 10px -10px #200

.ogre
  width: 600px
  position: fixed
  top: -50px
  left: -200px
  transform: rotate(25deg)
  float: left
  padding-right: 20px
  z-index: -1

@css {
  .ogre { display:none\0/IE9; }  /* IE */
}

.ogre_ie
  width: 600px
  position: fixed
  top: -50px
  left: -200px
  transform: rotate(25deg)
  float: left
  padding-right: 20px
  z-index: -1

.content
  padding-top: 20px
  clear: both

.map
  width: 100%
  height: 400px
  background-color: #eee
